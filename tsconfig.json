{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",

    "esModuleInterop": true,
    "skipLibCheck": true,

    "allowSyntheticDefaultImports": true,

    "lib": ["DOM", "ESNext"],

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
