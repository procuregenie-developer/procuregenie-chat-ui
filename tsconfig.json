{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "jsx": "react-jsx",

    "lib": ["DOM", "ES2015", "ES2016", "ES2017"],

    "moduleResolution": "Node",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "outDir": "dist",
    "declaration": true,
    "sourceMap": false,

    "allowJs": true,
    "resolveJsonModule": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "noEmitOnError": false
  },

  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
